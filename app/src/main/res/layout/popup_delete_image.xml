<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_catch_date"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="@string/popup_delete_image_q"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_yes_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_yes"
            android:theme="@style/PrimaryButton"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_no_image"
            app:layout_constraintStart_toStartOf="@+id/text_catch_date" />

        <Button
            android:id="@+id/button_no_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/btn_no"
            android:theme="@style/PrimaryButton"
            app:layout_constraintEnd_toEndOf="@+id/text_catch_date"
            app:layout_constraintTop_toBottomOf="@+id/text_catch_date" />
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>