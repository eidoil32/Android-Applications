<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:theme="@android:style/Theme.Material.Dialog"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_delete_appointment_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/heebo_light"
        android:text="@string/dialog_delete_appointment_confirm"
        android:textAlignment="center"
        android:textColor="@color/colorTextSimple"
        app:layout_constraintEnd_toEndOf="@+id/dialog_new_apt_ok"
        app:layout_constraintStart_toStartOf="@+id/dialog_new_apt_cancel"
        app:layout_constraintTop_toBottomOf="@+id/dialog_new_apt_date" />

    <TextView
        android:id="@+id/dialog_new_apnt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/heebo_light"
        android:text="@string/dialog_delete_appointment_title"
        android:textColor="@color/colorTextSimple"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/guide_center_line"
        app:layout_constraintStart_toStartOf="@+id/guide_center_line"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="100dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="175dp" />

    <TextView
        android:id="@+id/dialog_new_apt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/heebo_light"
        android:textColor="@color/colorTextSimple"
        android:textColorLink="@color/colorTextSimple"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/dialog_new_apt_cancel"
        app:layout_constraintTop_toBottomOf="@+id/dialog_new_apnt_title"
        tools:text="20-01-2019" />

    <TextView
        android:id="@+id/dialog_new_apt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/heebo_light"
        android:textColor="@color/colorTextSimple"
        android:textColorLink="@color/colorTextSimple"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/dialog_new_apt_ok"
        app:layout_constraintTop_toBottomOf="@+id/dialog_new_apnt_title"
        tools:text="18:00" />

    <android.support.constraint.Guideline
        android:id="@+id/guide_center_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="159dp" />

    <Button
        android:id="@+id/dialog_new_apt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        style="@style/button_no_background"
        android:background="@drawable/button_no_background"
        android:text="@string/btn_cancel"
        app:layout_constraintBaseline_toBaselineOf="@+id/dialog_new_apt_ok"
        app:layout_constraintEnd_toStartOf="@+id/guide_center_line" />

    <Button
        android:id="@+id/dialog_new_apt_ok"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        style="@style/button_with_background"
        android:background="@drawable/button_with_background"
        android:text="@string/btn_order"
        app:layout_constraintStart_toStartOf="@+id/guide_center_line"
        app:layout_constraintTop_toTopOf="@+id/guideline7" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="150dp" />

</android.support.constraint.ConstraintLayout>